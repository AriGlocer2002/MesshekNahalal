<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    android:foregroundTint="@color/black">


    <Button
        android:id="@+id/btn_login2"
        android:layout_width="104dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back1"
        android:text="Login"
        android:textColor="@android:color/black"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="197dp"
        android:layout_height="67dp"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/grenze_semi_bold_italic"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/back1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_above="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/logo2" />



    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="379dp"
        android:layout_height="318dp"
        android:layout_above="@+id/cb_admin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/back4" />


    <EditText
        android:id="@+id/et_name_signUp"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:foregroundTint="#000000"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_last_name_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@+id/et_name_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintVertical_bias="0.311" />

    <EditText
        android:id="@+id/et_id_number_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@id/et_last_name_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Id number"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_phone_number_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@+id/et_id_number_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_email_address_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@+id/et_phone_number_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_password_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@+id/et_email_address_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/et_confirm_password_signUp"
        android:layout_width="316dp"
        android:layout_height="47dp"
        android:layout_below="@+id/et_password_signUp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="403dp"
        android:layout_height="163dp"
        android:layout_below="@id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-6dp"
        app:srcCompat="@drawable/back3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="228dp"
        android:layout_height="150dp"
        android:layout_below="@id/imageView9"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/back1" />

    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="21dp"
        app:srcCompat="@drawable/default_profile_picture" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="121dp"
        android:layout_height="113dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/profile_picture_frame" />

    <Button
        android:id="@+id/btn_signUp2"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#59D674"
        android:text="Sign Up"
        android:textColor="@android:color/black"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <CheckBox
        android:id="@+id/cb_admin"
        android:layout_width="172dp"
        android:layout_height="34dp"
        android:layout_above="@id/et_admin_code_signUp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#000000"
        android:buttonTint="#000000"
        android:checked="false"
        android:text="Are you an admin?"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/et_admin_code_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_signUp2"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Admin code"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />




</RelativeLayout>