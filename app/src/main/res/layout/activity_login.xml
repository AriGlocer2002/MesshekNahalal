<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    android:background="@drawable/background_img">

    <ImageView
        android:id="@+id/login_screen_iv_b1"
        android:layout_width="375dp"
        android:layout_height="218dp"
        android:layout_below="@id/login_screen_iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/back3" />

    <ImageView
        android:id="@+id/login_screen_iv_logo_background"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_below="@id/login_screen_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/back1" />

    <ImageView
        android:id="@+id/login_screen_iv_logo"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_below="@id/login_screen_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/login_screen_title"
        android:layout_width="197dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/grenze_semi_bold_italic"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintVertical_bias="0.097" />


    <EditText
        android:id="@+id/login_screen_et_email"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:layout_below="@id/login_screen_iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:drawableEnd="@drawable/ic_email"
        android:drawableTint="@color/black"
        android:ems="10"
        android:fontFamily="@font/heebo_regular"
        android:hint="Email account"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_screen_et_password"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login_screen_et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:drawableEnd="@drawable/ic_password"
        android:drawableTint="@color/black"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/login_screen_iv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_screen_tv_forgot_password"
        android:layout_alignBottom="@+id/login_screen_tv_forgot_password"
        android:layout_alignEnd="@+id/login_screen_tv_forgot_password"
        android:layout_alignTop="@+id/login_screen_tv_forgot_password"
        app:srcCompat="@drawable/back2" />

    <TextView
        android:id="@+id/login_screen_tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_screen_et_password"
        android:layout_alignStart="@+id/login_screen_et_password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:text="Forgot your password?"
        android:textColor="#3454C5"
        android:textSize="15sp" />

    <Button
        android:id="@+id/login_screen_btn_login"
        android:layout_width="228dp"
        android:layout_height="53dp"
        android:layout_below="@+id/login_screen_iv_forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#59D674"
        android:text="Login"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/login_screen_btn_sign_up"
        android:layout_width="104dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/back1"
        android:text="Sign up"
        android:textColor="@android:color/black" />


</RelativeLayout>