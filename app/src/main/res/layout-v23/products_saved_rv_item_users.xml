<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="10dp" >

    <RelativeLayout
        android:id="@+id/rl_product_item"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/products_rv_item_iv_pp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/default_product_pic_rv"/>

        <ImageView
            android:id="@+id/products_rv_item_iv_pp_frame"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/portarit_square" />

        <TextView
            android:id="@+id/products_rv_item_tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/products_rv_item_iv_pp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_bold"
            android:text="Full name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_full_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_light"
            android:text="Stock:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_stock_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/products_rv_item_tv_stock"
            android:layout_alignBottom="@+id/products_rv_item_tv_stock"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/products_rv_item_tv_stock"
            android:fontFamily="@font/heebo_regular"
            android:text="num"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_stock_num"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_regular"
            android:text="Price:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_stock_num"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/products_rv_item_tv_price_logo"
            android:layout_toEndOf="@+id/products_rv_item_tv_price"
            android:fontFamily="@font/heebo_regular"
            android:text="num"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_price_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_stock_num"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/ll_buy"
            android:fontFamily="@font/heebo_regular"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:background="@color/black"
                />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_marginHorizontal="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_marginHorizontal="5dp"
                android:background="@color/black"
                />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_remove_24"
            android:drawableTint="@color/black"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>