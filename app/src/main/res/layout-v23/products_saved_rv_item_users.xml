<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/rl_product_item"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/products_rv_item_iv_pp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/default_product_pic_rv"/>

        <ImageView
            android:id="@+id/products_rv_item_iv_pp_frame"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/portarit_square" />

        <TextView
            android:id="@+id/products_rv_item_tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/products_rv_item_iv_pp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_bold"
            android:text="Full name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_full_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_light"
            android:text="Stock:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_stock_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/products_rv_item_tv_stock"
            android:layout_alignBottom="@+id/products_rv_item_tv_stock"
            android:layout_marginHorizontal="5dp"
            android:layout_toStartOf="@+id/ll_buy"
            android:layout_toEndOf="@+id/products_rv_item_tv_stock"
            android:fontFamily="@font/heebo_regular"
            android:text="num"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_stock_num"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/products_rv_item_iv_pp_frame"
            android:fontFamily="@font/heebo_regular"
            android:text="Price:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_rv_item_tv_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_rv_item_tv_stock_num"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_toStartOf="@+id/ll_buy"
            android:layout_toEndOf="@+id/products_rv_item_tv_price"
            android:fontFamily="@font/heebo_regular"
            android:text="num"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@color/black"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@color/black"
                android:src="@drawable/ic_baseline_remove_24"
                app:tint="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>